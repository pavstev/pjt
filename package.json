    "clean": "find . -type d -empty -delete && git clean -Xfd -e .env.local && pnpm i",
    "knip": "knip -c knip.config.ts",
    "nx": "nx",
    "build": "nx run-many -t build",
    "format": "prettier . -w --cache --config .prettierrc.json",
    "lint": "nx run-many -t lint",
    "typecheck": "nx run-many -t typecheck",
    "e2e": "nx run-many -t e2e",
    "remove-built": "fd -e \".d.ts\" -e \".js\" --exclude \"jest.preset.js\" --exclude \"env.d.ts\"",
