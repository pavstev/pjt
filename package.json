{
  "name": "pjt",
  "version": "1.0.26",
  "private": false,
  "description": "A powerful cross-platform CLI tool for maintaining clean Git repositories. Removes empty directories, ignored files, and reinstalls dependencies with support for npm, pnpm, and yarn.",
  "keywords": [
    "git",
    "clean",
    "pnpm",
    "npm",
    "yarn",
    "cross-platform",
    "cli",
    "tool",
    "maintenance"
  ],
  "homepage": "https://pjt.stevanpavlovic.com",
  "bugs": {
    "url": "https://github.com/pavstev/pjt/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pavstev/pjt.git"
  },
  "license": "MIT",
  "author": {
    "name": "Stevan Pavlovic",
    "email": "hi@stevanpavlovic.com",
    "url": "https://stevanpavlovic.com/"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/main.cjs",
      "require": "./dist/main.cjs"
    }
  },
  "main": "./dist/main.cjs",
  "types": "./dist/main.d.ts",
  "bin": {
    "pjt": "dist/main.cjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "all": "pnpm format && pnpm lint && pnpm build && pnpm typecheck && pnpm test && pnpm knip && pnpm docs:build",
    "build": "unbuild",
    "clean": "find . -type d -empty -delete && git clean -Xfd -e .env.local && pnpm i",
    "dev": "tsc --watch -p tsconfig.build.json",
    "docs": "cd docs && astro dev",
    "docs:build": "cd docs && astro build",
    "format": "prettier --write --cache .",
    "knip": "knip --config knip.config.ts",
    "lint": "eslint src --fix --max-warnings 0 --cache",
    "prepublishOnly": "pnpm build",
    "release": "pnpm all && pnpm docs:build && pnpm version patch && pnpm publish",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit -p tsconfig.build.json"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "globify-gitignore": "^1.0.3",
    "package-manager-detector": "^1.6.0",
    "tinyexec": "^1.0.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@eslint/markdown": "^6.1.0",
    "@types/node": "^24.10.1",
    "astro": "^5.16.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-json-schema-validator": "^5.1.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-mdx": "^3.1.5",
    "jiti": "^2.6.1",
    "knip": "^5.71.0",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.20",
    "simple-git": "^3.27.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.2",
    "unbuild": "^3.6.1",
    "vite": "^7.2.6",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "publishConfig": {
    "access": "public"
  }
}
