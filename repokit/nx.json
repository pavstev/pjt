{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "cacheDirectory": "./node_modules/.cache/nx",
  "cli": {
    "packageManager": "pnpm"
  },
  "generators": {
    "@nx/js:lib": {
      "buildable": true
    },
    "@nx/react": {
      "application": {
        "babel": true,
        "bundler": "vite",
        "linter": "eslint",
        "style": "tailwind"
      },
      "component": {
        "style": "tailwind"
      },
      "library": {
        "linter": "eslint",
        "style": "tailwind",
        "unitTestRunner": "vitest"
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/eslint.config.ts",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/vitest.config.[jt]s",
      "!{projectRoot}/.stylelintrc(.(json|yml|yaml|js))?",
      "!{projectRoot}/vite.config.[jt]s",
      "!{projectRoot}/*.config.ts",
      "!{projectRoot}/CHANGELOG.md",
      "!{projectRoot}/cypress/**/*",
      "!{projectRoot}/**/*.cy.[jt]s?(x)",
      "!{projectRoot}/cypress.config.[jt]s"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/.github/workflows/ci.yml",
      "{workspaceRoot}/.github/workflows/main.yml",
      "{workspaceRoot}/go.work"
    ]
  },
  "neverConnectToCloud": true,
  "parallel": 3,
  "plugins": [
    {
      "options": {
        "lintFilePatterns": [
          "./*.ts",
          "./*.mjs",
          "./*.json",
          "./*.md",
          "./*.yml",
          "./*.yaml",
          "./*.html",
          "./*.tsx",
          "./*.astro"
        ],
        "targetName": "lint"
      },
      "plugin": "@nx/eslint/plugin"
    },
    {
      "options": {
        "build": {
          "buildDepsName": "build-deps",
          "configName": "tsconfig.lib.json",
          "targetName": "build",
          "watchDepsName": "watch-deps"
        },
        "typecheck": {
          "targetName": "typecheck"
        }
      },
      "plugin": "@nx/js/typescript"
    },
    {
      "options": {
        "buildTargetName": "build",
        "lintTargetName": "lint",
        "serveTargetName": "serve",
        "testTargetName": "test",
        "tidyTargetName": "tidy"
      },
      "plugin": "@naxodev/gonx"
    },
    {
      "options": {
        "targetName": "e2e"
      },
      "plugin": "@nx/playwright/plugin"
    },
    {
      "options": {
        "buildDepsTargetName": "build-deps",
        "buildTargetName": "build",
        "devTargetName": "dev",
        "startTargetName": "start",
        "typecheckTargetName": "typecheck",
        "watchDepsTargetName": "watch-deps"
      },
      "plugin": "@nx/react/router-plugin"
    },
    {
      "plugin": "@repokit/ribbon-nx"
    },
    {
      "options": {
        "targetName": "test"
      },
      "plugin": "@nx/jest/plugin"
    },
    "@nxext/svelte"
  ],
  "release": {
    "version": {
      "preVersionCommand": "pnpx nx run-many -t build"
    }
  },
  "sync": {
    "applyChanges": true,
    "globalGenerators": [
      "@repokit/ribbon-nx:export-generator-schemas",
      "@repokit/ribbon-nx:copy-schemas"
    ]
  },
  "targetDefaults": {
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "build": {
      "cache": true,
      "dependsOn": [
        "^build",
        {
          "projects": "self",
          "target": "typecheck"
        }
      ],
      "inputs": ["production", "^production"]
    },
    "dev": {
      "cache": false
    },
    "e2e": {
      "cache": true,
      "inputs": ["default", "^production"]
    },
    "knip": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["default"],
      "options": {
        "commands": ["pnpm exec knip --config=knip.config.ts"],
        "cwd": "{projectRoot}"
      },
      "outputs": []
    },
    "lint": {
      "cache": true,
      "dependsOn": [
        {
          "projects": "self",
          "target": "typecheck"
        }
      ],
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/eslint.config.js"
      ],
      "options": {
        "fix": true
      }
    },
    "stylelint": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["{projectRoot}/**/*.css"],
      "options": {
        "cacheLocation": "./node_modules/.cache/stylelint",
        "command": [
          "pnpm",
          "stylelint",
          "--config",
          ".stylelintrc.json",
          "'**/*.css'"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^production"]
    },
    "typecheck": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["^default"],
      "options": {
        "command": ["tsc", "--noEmit", "-p", "./tsconfig.json"],
        "cwd": "{projectRoot}"
      }
    },
    "uncomment": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["default"],
      "options": {
        "command": ["pnpm", "uncomment", "--config", ".uncommentrc.toml", "."],
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/**/*"]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.cjs"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tui": {
    "autoExit": true,
    "enabled": false
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  }
}
