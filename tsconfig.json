{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },

  "exclude": [
    "vite.config.ts",
    "eslint.config.ts",
    "knip.config.ts",
    "prettier.config.ts"
  ],
  "references": [
    { "path": "./tsconfig.build.json" },
    { "path": "./tsconfig.spec.json" }
  ]
}
