{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "propertyNames": {
    "type": "string"
  },
  "additionalProperties": {
    "type": "object",
    "properties": {
      "condition": {
        "type": "string",
        "enum": [
          "always",
          "git-tracked",
          "never"
        ]
      },
      "filePatterns": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "description": {
        "type": "string"
      },
      "overrides": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "files": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "excludeFiles": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "options": {
              "type": "object",
              "propertyNames": {
                "type": "string"
              },
              "additionalProperties": {}
            }
          },
          "required": [
            "files",
            "options"
          ],
          "additionalProperties": false
        }
      }
    },
    "required": [
      "condition"
    ],
    "additionalProperties": false
  }
}