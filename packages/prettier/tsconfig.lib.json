{
  "compilerOptions": {
    "outDir": "./dist/prettier",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@pjt/core": ["../core/src"],
      "@pjt/schemas": ["../schemas/src"]
    }
  },
  "exclude": [
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*", "src/**/*.json"]
}
